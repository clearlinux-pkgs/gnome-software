+
+	for (i = 0; i < priv->bundle_content->len; i++) {
+		tmp = g_ptr_array_index (priv->bundle_content, i);
+		if (g_strcmp0 (tmp, package) != 0)
+			continue;
+		g_ptr_array_remove_index_fast (priv->bundle_content, i);
